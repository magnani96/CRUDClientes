@model CRUDPractico.Models.AgregarClienteViewModel

<h1>Agregar cliente</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">CUIL</label>
        <input type="text" inputmode="numeric" class="form-control" asp-for="Cuil" />
    </div>

    <div class="mt-3">
        <label class="form-label">Teléfono</label>
        <input type="text" inputmode="numeric" class="form-control" asp-for="Telefono" />
    </div>

    <div class="mt-3">
        <label class="form-label">Dirección</label>
        <input type="text" class="form-control" asp-for="Direccion" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Activo" asp-for="Activo" />
        <label class="form-check-label">Activo</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
